<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    android:paddingLeft="@dimen/dp_40"
    android:paddingRight="@dimen/dp_40">
    
    <ImageView
        android:id="@+id/login_image_phone"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_130"
        android:background="@mipmap/log_icon_phone_default"
        />
    <EditText
        android:id="@+id/login_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_130"
        android:textSize="@dimen/sp_18"
        android:maxLength="11"
        android:hint="手机号"
        android:textColor="#eeeeee"
        android:textColorHint="#eeeeee"
        android:inputType="number"
        android:background="@null"
        android:layout_toRightOf="@+id/login_image_phone"
        />
    <View
        android:alpha="0.9"
        android:id="@+id/login_view_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/login_image_phone"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="#10ffffff"/>
    <ImageView
        android:id="@+id/login_image_lock"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_24"
        android:background="@mipmap/log_icon_lock_default"
        android:layout_below="@id/login_view_phone"
        />
    <EditText
        android:id="@+id/login_pwd"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toLeftOf="@id/login_eye"
        android:hint="登录密码"
        android:password="true"
        android:maxLength="20"
        android:textSize="@dimen/sp_18"
        android:textColor="#eeeeee"
        android:textColorHint="#eeeeee"
        android:background="@null"
        android:layout_below="@id/login_view_phone"
        android:layout_toRightOf="@+id/login_image_lock"
        />
    <ImageView
        android:id="@+id/login_eye"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_alignTop="@id/login_pwd"
        android:layout_alignParentRight="true"
        android:background="@mipmap/log_icon_eye_default"
        />
    <View
        android:alpha="0.9"
        android:id="@+id/login_view_pwd"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_2"
        android:background="#10ffffff"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/login_image_lock"
        />
    <CheckBox
        android:layout_below="@id/login_view_pwd"
        android:id="@+id/login_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#fff"
        android:text="记住密码"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:textColor="#fff"
        />
    <CheckBox
        android:id="@+id/login_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_view_pwd"
        android:layout_toRightOf="@id/login_remember"
        android:buttonTint="#fff"
        android:text="自动登录"
        android:textSize="@dimen/sp_14"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/login_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:layout_below="@id/login_view_pwd"
        android:layout_alignRight="@id/login_view_pwd"
        android:layout_alignTop="@id/login_remember"
        android:layout_alignBottom="@id/login_remember"
        android:text="快速注册"
        />
    <Button
        android:id="@+id/login_but"
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_below="@id/login_remember"
        android:text="登录"
        android:textColor="#fff"
        android:background="@drawable/shape_button_login"
    />
    <LinearLayout
        android:id="@+id/linear_third"
        android:layout_width="@dimen/dp_312"
        android:layout_below="@+id/login_but"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal"
        >
        <View
            android:background="#80ffffff"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_2"/>
        <TextView
            android:id="@+id/login_text_third"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:textColor="#80ffffff"
            android:layout_weight="1"
            android:textSize="@dimen/sp_10"
            android:text="第三方账号快速登录"
            />
        <View
            android:background="#80ffffff"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_2"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/login_weixin"
        android:layout_below="@+id/linear_third"
        android:layout_height="@dimen/dp_30"
        android:layout_width="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/log_icon_weixin_default"
        />

</RelativeLayout>