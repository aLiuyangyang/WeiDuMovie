<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.showfragment.ShowFilmFragment"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_250"
               android:background="@mipmap/beijing2">

               <android.support.constraint.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/area_place"
                       android:layout_width="@dimen/dp_24"
                       android:layout_height="@dimen/dp_24"
                       android:src="@mipmap/com_icon_loc_white_default"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:layout_marginTop="@dimen/dp_30"
                       app:layout_constraintLeft_toLeftOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       />

                   <TextView
                       android:id="@+id/area_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="北京"
                       android:textColor="#fff"
                       android:textSize="@dimen/sp_16"
                       android:layout_marginTop="@dimen/dp_30"
                       android:layout_marginLeft="@dimen/dp_5"
                       app:layout_constraintLeft_toRightOf="@+id/area_place"
                       app:layout_constraintTop_toTopOf="parent"
                       />

                   <android.support.v7.widget.SearchView
                       android:id="@+id/now_search"
                       android:layout_width="@dimen/dp_220"
                       android:layout_height="@dimen/dp_24"
                       android:background="@drawable/shape_button_login"
                       android:layout_marginTop="@dimen/dp_30"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       android:layout_marginRight="@dimen/dp_0"
                       android:visibility="invisible"
                       />


                   <TextView
                       android:id="@+id/original_search"
                       android:layout_width="@dimen/dp_50"
                       android:layout_height="@dimen/dp_24"
                       android:background="@drawable/shape_button_login"
                       android:layout_marginTop="@dimen/dp_30"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       android:layout_marginRight="@dimen/dp_0"
                       >


                   </TextView>

                   <ImageView
                       android:id="@+id/search_image"
                       android:layout_width="@dimen/dp_18"
                       android:layout_height="@dimen/sp_18"
                       android:src="@mipmap/com_icon_search_default"
                       android:layout_marginTop="@dimen/dp_32"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintRight_toRightOf="parent"
                       android:layout_marginRight="@dimen/dp_22"
                       />
               </android.support.constraint.ConstraintLayout>


           </RelativeLayout>
           <recycler.coverflow.RecyclerCoverFlow
               android:id="@+id/recyc_flow"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_223"
               android:layout_marginTop="@dimen/dp_85"
               android:layout_marginLeft="@dimen/dp_24"
               android:layout_marginRight="@dimen/dp_24">

           </recycler.coverflow.RecyclerCoverFlow>


           <LinearLayout
               android:id="@+id/hot"
               android:paddingLeft="@dimen/dp_24"
               android:layout_marginTop="@dimen/dp_330"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView

                   android:text="热门电影"
                   android:textSize="@dimen/sp_16"
                   android:textColor="#333333"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <View
                   android:background="@drawable/show_file"
                   android:layout_marginTop="@dimen/dp_4"
                   android:layout_width="@dimen/dp_30"
                   android:layout_height="@dimen/dp_3"/>
               <android.support.v7.widget.RecyclerView
                   android:id="@+id/hotRecy"
                   android:layout_marginTop="@dimen/sp_20"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
           </LinearLayout>

           <LinearLayout
               android:id="@+id/newshowing"
               android:layout_below="@id/hot"
               android:paddingLeft="@dimen/dp_24"
               android:layout_marginTop="@dimen/dp_20"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView

                   android:text="正在热映"
                   android:textSize="@dimen/sp_16"
                   android:textColor="#333333"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <View
                   android:background="@drawable/show_file"
                   android:layout_marginTop="@dimen/dp_4"
                   android:layout_width="@dimen/dp_30"
                   android:layout_height="@dimen/dp_3"/>
               <android.support.v7.widget.RecyclerView
                   android:id="@+id/newShowing_Recy"
                   android:layout_marginTop="@dimen/sp_20"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </android.support.v7.widget.RecyclerView>
           </LinearLayout>
           <LinearLayout
               android:layout_below="@id/newshowing"
               android:paddingLeft="@dimen/dp_24"
               android:layout_marginTop="@dimen/dp_20"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:text="即将上映"
                   android:textSize="@dimen/sp_16"
                   android:textColor="#333333"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <View
                   android:background="@drawable/show_file"
                   android:layout_marginTop="@dimen/dp_4"
                   android:layout_width="@dimen/dp_30"
                   android:layout_height="@dimen/dp_3"/>
               <android.support.v7.widget.RecyclerView
                   android:id="@+id/comingSooe_Recy"
                   android:layout_marginTop="@dimen/sp_20"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
               </android.support.v7.widget.RecyclerView>
           </LinearLayout>

       </RelativeLayout>
   </ScrollView>
</LinearLayout>