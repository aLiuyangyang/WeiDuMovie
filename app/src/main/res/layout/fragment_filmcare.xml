<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/mine_back"
    android:layout_height="@dimen/dp_148">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/care_film_sim"
        android:layout_width="@dimen/dp_103"
        android:layout_centerVertical="true"
        fresco:roundedCornerRadius="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="@dimen/dp_128" />
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:id="@+id/care_film_name"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/care_film_sim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/care_film_sim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/sp_12"
        android:textColor="#999999"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/care_film_sim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>