<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/dp_205"
        android:layout_height="@dimen/dp_205"
        android:layout_marginTop="@dimen/dp_150"
        android:layout_centerHorizontal="true"
        android:id="@+id/guide_first_img"
        android:background="@mipmap/icon3"
        />

    <TextView
        android:id="@+id/guide_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/guide_first_img"
        android:text="一场电影"
        android:layout_marginTop="60dp"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="荡涤你的心灵"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/guide_first_name"
        android:id="@+id/guide_first_title"
        />

</RelativeLayout>