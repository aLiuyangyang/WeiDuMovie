<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    android:paddingRight="@dimen/dp_40"
    android:paddingLeft="@dimen/dp_40"
    tools:context=".view.activity.logandregactivity.RegisterActivity">
    <com.xw.repo.XEditText
        android:id="@+id/reg_name"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_120"
        android:drawableLeft="@mipmap/register_icon_name_default"
        android:drawablePadding="@dimen/dp_18"
        android:hint="昵称"
        android:textColor="#eeeeee"
        android:textColorHint="#fff"
        app:x_disableClear="true"
        app:x_disableEmoji="true"
        android:theme="@style/MyEditText"
        android:textSize="@dimen/sp_16"
        />

    <ImageView
        android:id="@+id/ww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_name"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@mipmap/register_icon_sex_default"
        android:text="性别:"
        android:textColor="#eeeeee"
        android:textSize="@dimen/sp_18" />
    <RadioGroup
        android:id="@+id/reg_sex"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_toRightOf="@id/ww"
        android:orientation="horizontal"
        android:layout_below="@id/reg_name"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content">
        <RadioButton
            android:text="男"
            android:checked="true"
            android:textColor="#eeeeee"
            android:textSize="@dimen/sp_16"
            android:theme="@style/MyEdit"
            android:id="@+id/reg_sexman"
            android:layout_below="@+id/updatapass_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="女"
            android:id="@+id/reg_sexwoman"
            android:textColor="#eeeeee"
            android:textSize="@dimen/sp_16"
            android:theme="@style/MyEdit"
            android:layout_below="@+id/updatapass_name"
            android:layout_toRightOf="@id/updatapass_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <View
        android:background="#6ccc"
        android:layout_below="@id/reg_sex"
        android:layout_width="@dimen/dp_273"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/reg_date"
        android:layout_below="@id/reg_sex"
        android:layout_width="@dimen/dp_278"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_4"
        android:drawableLeft="@mipmap/register_icon_date_default"
        android:drawablePadding="@dimen/dp_16"
        android:hint="出生日期"
        android:textColor="#eeeeee"
        android:textColorHint="#fff"
        android:theme="@style/MyEditText"
        android:textSize="@dimen/sp_16"
        />
    <View
        android:background="#6ccc"
        android:layout_below="@id/reg_date"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_width="@dimen/dp_273"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_height="1dp"/>

    <EditText
        android:id="@+id/reg_phone"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_date"
        android:layout_marginTop="12dp"
        android:digits="0123456789"
        android:drawableLeft="@mipmap/reg_ohone"
        android:drawablePadding="@dimen/dp_24"
        android:hint="手机号"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="#eeeeee"
        android:textColorHint="#fff"
        android:textSize="@dimen/sp_16"
        android:theme="@style/MyEditText" />
    <EditText
        android:id="@+id/reg_emil"
        android:layout_below="@id/reg_phone"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/register_icon_mail_default"
        android:drawablePadding="@dimen/dp_16"
        android:hint="邮箱"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyz@."
        android:textColor="#eeeeee"
        android:textColorHint="#fff"
        android:theme="@style/MyEditText"
        android:textSize="@dimen/sp_16"
        />

    <EditText
        android:id="@+id/reg_pass"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_emil"
        android:drawableLeft="@mipmap/register_lock_default_hdpi"
        android:drawablePadding="@dimen/dp_23"
        android:hint="登录密码"
        android:password="true"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyz."
        android:textColor="#eeeeee"
        android:textColorHint="#fff"
        android:textSize="@dimen/sp_16"
        android:theme="@style/MyEditText"
        />
       <Button
           android:layout_width="@dimen/dp_280"
           android:layout_height="@dimen/dp_40"
           android:id="@+id/reg_but"
           android:background="@drawable/shape_button_login"
           android:layout_below="@id/reg_pass"
           android:layout_marginTop="@dimen/dp_80"
           android:text="注册"
           android:textSize="@dimen/sp_18"
           android:textColor="#ffffff"
           android:theme="@style/MyEditText"
           />
</RelativeLayout>