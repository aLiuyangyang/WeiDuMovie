<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bitmap"
    android:paddingRight="@dimen/dp_40"
    android:paddingLeft="@dimen/dp_40"
    tools:context=".view.activity.logandregactivity.RegisterActivity">
    <EditText
        android:id="@+id/reg_name"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_120"
        android:drawableLeft="@mipmap/register_icon_name_default"
        android:drawablePadding="@dimen/dp_20"
        android:hint="昵称"
        android:textColor="#eeeeee"
        android:textColorHint="#fff"
        android:theme="@style/MyEditText"
        android:textSize="@dimen/sp_16"
        />
    <EditText
        android:id="@+id/reg_sex"
        android:layout_below="@id/reg_name"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableLeft="@mipmap/register_icon_sex_default"
        android:drawablePadding="@dimen/dp_20"
        android:hint="性别"
        android:textColor="#eeeeee"
        android:textColorHint="#fff"
        android:theme="@style/MyEditText"
        android:textSize="@dimen/sp_16"
        />


    <TextView
        android:id="@+id/reg_date"
        android:layout_below="@id/reg_sex"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableLeft="@mipmap/register_icon_date_default"
        android:drawablePadding="@dimen/dp_20"
        android:hint="出生日期"
        android:textColor="#eeeeee"
        android:textColorHint="#fff"
        android:theme="@style/MyEditText"
        android:textSize="@dimen/sp_16"
        />
    <View
        android:background="#6ccc"
        android:layout_below="@id/reg_date"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_width="@dimen/dp_280"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/reg_phone"
        android:layout_below="@id/reg_date"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:theme="@style/MyEditText"
        android:drawableLeft="@mipmap/reg_ohone"
        android:drawablePadding="@dimen/dp_20"
        android:hint="手机号"
        android:textColor="#eeeeee"
        android:textColorHint="#fff"
        android:textSize="@dimen/sp_16"
        />
    <EditText
        android:id="@+id/reg_emil"
        android:layout_below="@id/reg_phone"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableLeft="@mipmap/register_icon_mail_default"
        android:drawablePadding="@dimen/dp_20"
        android:hint="邮箱"
        android:textColor="#eeeeee"
        android:textColorHint="#fff"
        android:theme="@style/MyEditText"
        android:textSize="@dimen/sp_16"
        />

    <EditText
        android:id="@+id/reg_pass"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_emil"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableLeft="@mipmap/register_lock_default_hdpi"
        android:drawablePadding="@dimen/dp_20"
        android:hint="登录密码"
        android:textColor="#eeeeee"
        android:textColorHint="#fff"
        android:textSize="@dimen/sp_16"
        android:theme="@style/MyEditText"
        />
       <Button
           android:layout_width="@dimen/dp_280"
           android:layout_height="@dimen/dp_40"
           android:id="@+id/reg_but"
           android:background="@drawable/shape_button_login"
           android:layout_below="@id/reg_pass"
           android:layout_marginTop="@dimen/dp_80"
           android:text="注册"
           android:textSize="@dimen/sp_18"
           android:textColor="#ffffff"
           android:theme="@style/MyEditText"
           />
</RelativeLayout>