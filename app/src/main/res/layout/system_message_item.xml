<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333333"
            android:id="@+id/system_message_textTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="时间"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:id="@+id/system_message_textTime"/>

            <TextView
                android:layout_width="200dp"
                android:layout_below="@id/system_message_textTitle"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:id="@+id/system_message_textContent" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:textColor="#fff"
                android:textSize="13sp"
                android:text="1"
                android:background="@drawable/mine"
                android:gravity="center"
                android:layout_alignBottom="@id/system_message_textContent"
                android:id="@+id/system_message_text_read" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/system_message_textContent"
            android:background="#6ccc"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/dp_10"
            />

</RelativeLayout>