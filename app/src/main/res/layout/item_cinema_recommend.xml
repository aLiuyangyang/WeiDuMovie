<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingLeft="@dimen/dp_10"
        android:id="@+id/rela"
        android:elevation="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:background="@drawable/all_bg"
        android:layout_width="@dimen/dp_312"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/dp_90">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_image_cinema"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70" />
        <TextView
            android:text="23"
            android:id="@+id/item_name_cinema"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/item_image_cinema"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_addr_cinema"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:maxLines="2"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/item_image_cinema"
            android:text="23"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />
        <TextView
            android:id="@+id/item_distance_cinema"
            android:text="23"
            android:textColor="#333333"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/item_image_cinema"
            android:textSize="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_attention_cinema"
                android:layout_marginTop="@dimen/dp_55"
                android:text="2323"
                android:background="@mipmap/com_icon_collection_default"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>