<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        tools:targetApi="lollipop"
        android:paddingLeft="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="@dimen/dp_4"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center"
        >

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="@dimen/dp_312"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/dp_90">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_image_cinema"
            fresco:roundedCornerRadius="@dimen/dp_4"
            android:layout_width="@dimen/dp_70"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_10" />
        <TextView
            android:id="@+id/item_name_cinema"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/item_image_cinema"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_addr_cinema"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:maxLines="2"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_toRightOf="@id/item_image_cinema"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/item_distance_cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_toRightOf="@id/item_image_cinema"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_attention_cinema"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_62"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/com_icon_collection_default"
                android:text="2323" />
        </LinearLayout>
    </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>