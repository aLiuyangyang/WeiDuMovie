<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.showmineactivity.UpdatePassActivity">
    <RelativeLayout
        android:id="@+id/personal_email_phone"
        android:layout_width="match_parent"
        android:elevation="@dimen/dp_4"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_message_relative"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/mine_back"
        >
        <TextView
            android:id="@+id/personal_meassage_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前密码"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            />
        <EditText
            android:hint="请输入"
            android:id="@+id/personal_pass"
            android:layout_width="100dp"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:maxLines="12"
            android:password="true"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyz."
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"

            />
        <View
            android:id="@+id/personal_phone_message"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personal_meassage_phone"
            android:background="#cccccc"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/pass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置密码为"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:textColor="#333333"
            android:layout_marginTop="10dp"
            android:layout_below="@id/personal_phone_message"
            />
        <EditText
            android:id="@+id/personal_resetPass"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@id/personal_pass"
            android:layout_alignParentRight="true"
            android:hint="请输入"
            android:password="true"
            android:maxLines="12"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyz."
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            />
        <View
            android:id="@+id/personal_phone_messag"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/pass1"
            android:background="#cccccc"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/personal_phone_messag"
            android:layout_height="wrap_content"
            android:text="请再次确认密码"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="#333333"
            />
        <EditText
            android:id="@+id/personal_okPass"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入"
            android:textSize="@dimen/sp_14"
            android:maxLines="12"
            android:password="true"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyz."
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/personal_resetPass"
            />

    </RelativeLayout>
    <Button
        android:id="@+id/myokpass"
        android:layout_centerVertical="true"
        android:text="确认"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <include layout="@layout/include_return"/>
</RelativeLayout>