<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        tools:targetApi="lollipop"
        android:paddingLeft="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="@dimen/dp_4"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_80"
        android:layout_gravity="center"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:text="1号厅"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:id="@+id/schedule_Play_Hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/schedule_Play_Hall"
            android:layout_marginTop="@dimen/dp_6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/schedule_Time_Start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:12"
                android:textColor="#000"
                android:textSize="@dimen/sp_20" />

            <View
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_14"
                android:background="#ccc" />

            <TextView
                android:id="@+id/schedule_Time_End"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/schedule_Play_Hall"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="12:32"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/schedule_Play_Hall"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="end"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <TextView
            android:text="￥"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_95"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_below="@id/schedule_Play_Hall"
            android:layout_width="@dimen/dp_20"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/schedule_Time_Price"
            android:text="0.23"
            android:textSize="@dimen/sp_28"
            android:textColor="#b11450"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/choseseat"
            android:background="@mipmap/com_icon_next_default"
            android:layout_width="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_height="@dimen/dp_16" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>