<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_186"
        android:background="@mipmap/beijing2"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/shape_seat_table"
            android:alpha="0.6"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/cinema_seat_table_text_beginTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#333"
                android:layout_marginLeft="@dimen/dp_30"
                android:text="xxx"/>

            <TextView
                android:id="@+id/cinema_seat_table_text_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#333"
                android:layout_marginLeft="@dimen/dp_30"
                android:text="xxx"/>

            <TextView
                android:id="@+id/cinema_seat_table_text_hall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#333"
                android:layout_marginLeft="@dimen/dp_30"
                android:text="xxx"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_100"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/rectangle3copy5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="可选"/>

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/rectangle3copy18"
                android:layout_marginLeft="@dimen/dp_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="选中"/>

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/rectangle3copy12"
                android:layout_marginLeft="@dimen/dp_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="已售"/>

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/guanyingqu"
                android:layout_marginLeft="@dimen/dp_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="最佳观影区"/>


        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_172"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/rectangle16"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            />

    </RelativeLayout>


    <com.bw.movie.utils.SeatTable
        android:id="@+id/seatView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_50"
        />

</LinearLayout>
