<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="4"
        android:background="@mipmap/beijing2"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/camera_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京沃美影城"
            android:textColor="#fff"
            android:textSize="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/camera_details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/camera_name"
            android:text="30号"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/camera_details_name"
            android:text="江湖儿女"
            android:textSize="@dimen/sp_18"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/cinema_seat_table_text_beginTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:00"
                android:textColor="#fff"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_0"
                android:text="--"/>

            <TextView
                android:id="@+id/cinema_seat_table_text_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_20"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_0"
                android:text="21:48"/>

            <TextView
                android:id="@+id/movie_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8号厅"
                android:textSize="@dimen/sp_20"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_35"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_110"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            >

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/rectangle3copy5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="可选"/>

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/rectangle3copy18"
                android:layout_marginLeft="@dimen/dp_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="选中"/>

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/rectangle3copy12"
                android:layout_marginLeft="@dimen/dp_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="已售"/>

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/guanyingqu"
                android:layout_marginLeft="@dimen/dp_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#fff"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="最佳观影区"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_12"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_172"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/rectangle16"
                android:layout_gravity="center"
                />
        </LinearLayout>


    </RelativeLayout>


    <com.bw.movie.utils.SeatTable
        android:id="@+id/seatView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="4"
        android:layout_marginTop="@dimen/dp_30"
        />

    <LinearLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:background="@drawable/dialog_rectangle"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计: ￥"
            android:textSize="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_34"
            />

        <TextView
            android:id="@+id/movie_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_30"
            android:layout_gravity="center"
            android:text="0.00"
            android:textColor="#b11450"
            />

        <ImageView
            android:id="@+id/pay_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/group2"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <ImageView
            android:id="@+id/pay_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/group3"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            />

    </LinearLayout>


</LinearLayout>
