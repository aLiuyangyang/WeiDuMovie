<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_500"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/dialog_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/file_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textSize="@dimen/sp_12"
                    android:text="类型:" />

                <TextView
                    android:id="@+id/file_director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/file_type"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/sp_12"
                    android:text="导演:" />

                <TextView
                    android:id="@+id/file_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/file_director"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/sp_12"
                    android:text="时长:" />

                <TextView
                    android:id="@+id/file_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/file_time"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/sp_12"
                    android:text="产地:" />

                <TextView
                    android:id="@+id/tv_film_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/file_type"
                    android:textSize="@dimen/sp_12"
                    android:text="TextView"
                    android:layout_toRightOf="@+id/file_type" />

                <TextView
                    android:id="@+id/tv_film_director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tv_film_type"
                    android:layout_alignTop="@+id/file_director"
                    android:textSize="@dimen/sp_12"
                    android:text="TextView"
                    android:layout_alignLeft="@+id/file_director" />

                <TextView
                    android:id="@+id/tv_film_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tv_film_director"
                    android:layout_alignTop="@+id/file_time"
                    android:textSize="@dimen/sp_12"
                    android:text="TextView"
                    android:layout_alignLeft="@+id/file_time" />

                <TextView
                    android:id="@+id/tv_film_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tv_film_type"
                    android:layout_alignTop="@+id/file_area"
                    android:textSize="@dimen/sp_12"
                    android:text="TextView"
                    android:layout_alignLeft="@+id/tv_film_type" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/finish_image"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentRight="true"
                android:background="@mipmap/com_icon_down_default" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_120"
            android:orientation="vertical"
            android:padding="@dimen/dp_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="剧情简介"
                android:textSize="@dimen/sp_16"
                android:layout_alignParentLeft="true" />

            <TextView
                android:background="@drawable/bg_dividing_line_title"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5" />

            <com.bw.movie.utils.CollapsibleTextView
                android:id="@+id/jianjie"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="演职人员"
                android:textSize="@dimen/sp_16"
                android:layout_alignParentLeft="true" />

            <TextView
                android:background="@drawable/bg_dividing_line_title"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/gradient"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="演员名字"
                        android:textColor="#fff"
                        android:textSize="@dimen/sp_12"
                        android:layout_alignParentLeft="true" />

                </LinearLayout>

            </LinearLayout>

                <TextView
                    android:id="@+id/file_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="徐峥"
                    android:textSize="@dimen/sp_16"
                    />


        </LinearLayout>

    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/file_img"
        android:layout_width="@dimen/dp_111"
        android:layout_height="@dimen/dp_149"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_24"
        app:placeholderImage="@mipmap/bitmap"
        />

</android.support.constraint.ConstraintLayout>