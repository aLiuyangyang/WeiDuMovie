<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.showcinemaactivity.SuccessActivity">
    <ImageView
        android:id="@+id/success"
        android:background="@mipmap/xhdpi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_200"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100" />
    <TextView
        android:id="@+id/success_text"
        android:text="支付成功"
        android:layout_below="@+id/success"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/success_go_page"
        android:text="返回"
        android:textColor="#fff"
        android:background="@drawable/show_fileh"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_90"
        android:layout_below="@id/success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/success_go_obli"
        android:text="去付款"
        android:textColor="#fff"
        android:background="@drawable/show_fileh"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@id/success_go_page"
        android:layout_below="@id/success_text"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>