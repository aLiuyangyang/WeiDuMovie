<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_24"
    android:paddingRight="@dimen/dp_24"
    android:layout_marginTop="@dimen/dp_30"
    android:layout_height="match_parent"
    tools:context=".view.activity.showmineactivity.OpinSuccessActivity">
   <TextView
       android:text="意见反馈"
       android:textSize="@dimen/sp_14"
       android:textColor="#333333"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <com.facebook.drawee.view.SimpleDraweeView
        fresco:roundAsCircle="true"
        android:id="@+id/sView"
        android:background="@mipmap/success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_110"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70" />
    <TextView
        android:layout_below="@+id/sView"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_16"
        android:textColor="#333333"
        android:text="反馈成功"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/sView"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_12"
        android:textColor="#333333"
        android:text="感谢您对维度影院的关注与支持，我们 会认真处理您的反馈，尽快修复和完善相关功能。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
     <include layout="@layout/include_return"/>
</RelativeLayout>